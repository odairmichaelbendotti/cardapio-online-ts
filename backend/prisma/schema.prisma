generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String   @id @default(uuid())
  nomeCompleto String
  email        String
  senha        String
  WhatsApp     String
  nascimento   DateTime
  cep          String
  cidade       String
  bairro       String
  numero       String
  referencia   String
  pedidos      Pedido[]
  createdAt    DateTime @default(now())
  role         Boolean  @default(false)
}

model Produto {
  id        String          @id @default(uuid())
  nome      String
  descricao String
  imagem    String
  preco     Float
  estoque   Int
  pedidos   PedidoProduto[]
  createdAt DateTime        @default(now())
}

model Pedido {
  id String @id @default(uuid())

  usuarioId String
  usuario   Usuario @relation(fields: [usuarioId], references: [id])

  produtos PedidoProduto[]

  total Float
}

model PedidoProduto {
  id         String @id @default(uuid())
  quantidade Int

  pedidoId String
  pedido   Pedido @relation(fields: [pedidoId], references: [id])

  produtoId String
  produto   Produto @relation(fields: [produtoId], references: [id])
}
